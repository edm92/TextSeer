    <!-- Messy based on solutin at http://stackoverflow.com/questions/18875244/java-build-ant-file-with-external-jar-files -->
    <property name="lib-dir" value="lib"/>

    <path id="classpath">
        <fileset dir="${lib-dir}" includes="**/*.jar"/>
    </path>

    <target name="run" depends="jar">
        <java jar="build/jar/TextSeer.jar" classpath="." fork="true"/>
    </target>

    <target name="jar" depends="build.modules">
        <mkdir dir="build/jar"/>
        <manifestclasspath property="jar.classpath" jarfile="build/jar/TextSeer.jar">
            <classpath refid="classpath"/>
        </manifestclasspath>
        <jar destfile="build/jar/TextSeer.jar" basedir="bin">

            <manifest>
                <attribute name="Main-Class" value="RunAll"/>
                <attribute name="Class-Path" value="${jar.classpath}"/>
            </manifest>
        </jar>
    </target>


