    <target name="compile.module.textseerprocesstools"
            depends="compile.module.textseerprocesstools.production,compile.module.textseerprocesstools.tests"
            description="Compile module TextSeerProcessTools"/>

    <target name="compile.module.textseerprocesstools.production"
            description="Compile module TextSeerProcessTools; production classes">
        <mkdir dir="${textseerprocesstools.output.dir}"/>
        <javac destdir="${textseerprocesstools.output.dir}" debug="${compiler.debug}"
               nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true"
               executable="${module.jdk.bin.textseerprocesstools}/javac">
            <compilerarg line="${compiler.args.textseerprocesstools}"/>
            <bootclasspath refid="textseerprocesstools.module.bootclasspath"/>
            <classpath refid="textseerprocesstools.module.production.classpath"/>
            <src refid="textseerprocesstools.module.sourcepath"/>
            <patternset refid="excluded.from.compilation.textseerprocesstools"/>
        </javac>

        <copy todir="${textseerprocesstools.output.dir}">
            <fileset dir="${module.textseerprocesstools.basedir}/src">
                <patternset refid="compiler.resources"/>
                <type type="file"/>
            </fileset>
        </copy>
    </target>

    <target name="compile.module.textseerprocesstools.tests" depends="compile.module.textseerprocesstools.production"
            description="compile module TextSeerProcessTools; test classes" unless="skip.tests"/>

    <target name="clean.module.textseerprocesstools" description="cleanup module">
        <delete dir="${textseerprocesstools.output.dir}"/>
        <delete dir="${textseerprocesstools.testoutput.dir}"/>
    </target>

